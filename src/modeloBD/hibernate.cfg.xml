<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/bilnow_db</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.show_sql">true</property>
  
  <mapping class="modeloBD.Cita" package="modeloBD" resource="/modeloBD.Cita.hbm.xml"/>
  <mapping class="modeloBD.Mascota" package="modeloBD" resource="/modeloBD.Mascota.hbm.xml"/>
  <mapping class="modeloBD.Productos" package="modeloBD" resource="/modeloBD.Productos.hbm.xml"/>
  <mapping class="modeloBD.Productosreservados" package="modeloBD" resource="/modeloBD.Productosreservados.hbm.xml"/>
  <mapping class="modeloBD.Reserva" package="modeloBD" resource="/modeloBD.Reserva.hbm.xml"/>
  <mapping class="modeloBD.Usuario" package="modeloBD" resource="/modeloBD.Usuario.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
